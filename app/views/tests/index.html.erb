<style>
  /* Заголовок таблиці */
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    text-align: left;
    padding: 8px;
  }

  th {
    background-color: #f2f2f2;
    color: #333;
  }

  /* Послідовне змінення кольорів рядків таблиці */
  tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  tbody tr:nth-child(odd) {
    background-color: #ffffff;
  }

  /* Силки */
  a {
    color: #337ab7;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>

<h1>Тести</h1>
<%= link_to 'Створити новий тест', new_test_path, class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th>Предмет</th>
      <th>Час початку</th>
      <th>Час кінця</th>
      <th>Часове обмеження (хв)</th>
      <th>Максимальна оцінка</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.title %></td>
        <td><%= test.subject %></td>
        <td><%= test.time_start %></td>
        <td><%= test.time_finish %></td>
        <td><%= test.time_limit %></td>
        <td><%= test.max_grade %></td>
        <td><%= link_to 'Дивитись', test, class: "btn btn-primary" %></td>
        <td><%= link_to 'Редагувати', edit_test_path(test), class: "btn btn-secondary" %></td>
        <td>
          <%= link_to 'Видалити', test, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
