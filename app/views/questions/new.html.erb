<h1>Create Question</h1>

<%= form_with(model: @question, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :level %>
  <%= form.number_field :level %>

  <h2>Answers</h2>
  <%= form.fields_for :answers do |answer_form| %>
    <%= answer_form.label :title %>
    <%= answer_form.text_field :title %>

    <%= answer_form.label :correctness %>
    <%= answer_form.check_box :correctness %>
  <% end %>

  <%= form.submit %>
<% end %>